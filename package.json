{
  "name": "postie",
  "version": "0.0.0",
  "description": "A postman type application for websockets",
  "main": "index.js",
  "scripts": {
    "start": "babel-node lib/server/index.js",
    "build-client": "webpack --config webpack.config.js",
    "build-styles": "node-sass lib/style/index.scss assets/styles/main.css",
    "watch-client": "nodemon -w lib/client -e js -x \"npm run build-client\"",
    "watch-server": "nodemon -w lib/server -e js -x \"npm start\"",
    "watch-styles": "nodemon -w lib/style -e scss -x \"npm run build-styles\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "babel-cli": "^6.24.0",
    "babel-preset-latest": "^6.24.0",
    "body-parser": "^1.17.1",
    "express": "^4.15.2",
    "node-sass": "^4.5.0",
    "nodemon": "^1.11.0",
    "pug": "^2.0.0-beta11",
    "webpack": "^2.2.1"
  },
  "babel": {
    "presets": [
      "latest"
    ]
  }
}
